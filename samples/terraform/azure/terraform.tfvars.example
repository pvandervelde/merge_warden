# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

# Required variables
environment = "prod"
location    = "australiaeast"

# GitHub App configuration
# Get these values from your GitHub App settings
github_app_id            = "123456"
github_app_private_key   = "-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
github_webhook_secret    = "your-webhook-secret-here"

# Optional: Custom resource naming
# resource_prefix = "myorg"

# Tags
tags = {
  Team        = "platform"
  Project     = "merge-warden"
  Environment = "production"
  Owner       = "platform-team@company.com"
}

# Application configuration
enforce_title_convention = true
require_work_items      = true

# PR size labeling
pr_size_enabled         = true
pr_size_fail_on_oversized = false
pr_size_label_prefix    = "size/"
pr_size_add_comment     = true

# Custom size thresholds (optional)
pr_size_xs_threshold          = 10
pr_size_small_threshold       = 50
pr_size_medium_threshold      = 100
pr_size_large_threshold       = 250
pr_size_extra_large_threshold = 500

# Bypass rules
bypass_title_enabled    = true
bypass_title_users      = ["dependabot[bot]", "renovate[bot]"]
bypass_work_item_enabled = true
bypass_work_item_users  = ["dependabot[bot]", "renovate[bot]"]

# Logging
log_level = "info"
rust_log  = "info,merge_warden=debug"
